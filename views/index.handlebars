<h1>Eat Da Burger</h1>

<h2>Add a new Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bur">Burger Type:</label>
    <input type="text" id="bur" name="name">
  </div>

  <button type="submit">Add Burger</button>

<h2>Burgers waiting to be devoured</h2>

<ul>
  {{#each cats}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers</h2>

<ul>
  {{#each cats}}
    {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>


</form>